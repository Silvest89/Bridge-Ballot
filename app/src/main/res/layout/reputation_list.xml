<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:columnCount="5"
    android:rowCount="2"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/rep_userName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="johnnieho8944"
        android:textSize="11dp"
        android:layout_column="0"
        android:layout_row="0"
        android:textColor="#33CC33"

        />

    <TextView
        android:id="@+id/rep_reputation"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="500"
        android:textSize="11dp"
        android:layout_column="1"
        android:layout_row="0"


        />

    <TextView
        android:id="@+id/rep_timeStamp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="2222-222222"
        android:textSize="12dp"
        android:layout_column="2"
        android:layout_row="0"


        />

    <ImageView
        android:id="@+id/rep_status"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_column="3"
        android:layout_row="0"



        />

    <Button
        android:id="@+id/rep_button"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_gravity="end"
        android:background="@drawable/dislike_button"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="1"
        android:background="#000000"/>
</GridLayout>